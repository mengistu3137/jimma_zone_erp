{
  "name": "debo-erp-api",
  "version": "1.0.0",
  "main": "server.js",
  "type": "module",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "test": "npx jest --detectOpenHandles --forceExit",
    "prisma:migrate": "npx prisma migrate dev",
    "prisma:generate": "npx prisma generate",
    "prisma:studio": "npx prisma studio",
    "seed:roles": "node src/seeders/roleSeeder.js",
    "seed:permissions": "node src/seeders/permissionSeeder.js",
    "seed:users": "node src/seeders/userSeeder.js",
    "seed:employees": "node src/seeders/employeeSeeder.js",
    "seed:manager-hierarchy": "node src/seeders/managerHierarchySeeder.js",
    "seed:attendance": "node src/seeders/attendanceHierarchySeeder.js",
    "seed": "npm run seed:roles && npm run seed:permissions && npm run seed:users && npm run seed:employees",
    "db:reset": "npx prisma migrate reset --force && npm run seed"
  },
  "repository": {
